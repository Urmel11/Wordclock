<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wordclock.Mobile.View.SettingsView"
			 xmlns:local="clr-namespace:Wordclock.Mobile.Converter"
			 Title="Einstellungen">

	<ContentPage.Resources>
		<ResourceDictionary>
			<local:PowerStateToBooleanConverter x:Key="PowerStateConverter"/>
			<local:TimeSpanToTextConverter x:Key="TimeSpanConverter"/>
		</ResourceDictionary>
	</ContentPage.Resources>
	
	<StackLayout VerticalOptions="FillAndExpand">
		<ScrollView VerticalOptions="FillAndExpand">
			<TableView>
				<TableView.Root>
					<TableSection Title="Energie">
						<SwitchCell Text="An" On="{Binding PowerState, Converter={StaticResource PowerStateConverter}}"/>
					</TableSection>
					<TableSection Title="Uptime">
						<TextCell Text="Start" Detail="{Binding Data.StartTime}"/>
						<TextCell Text="Uptime" Detail="{Binding Data.UpTime, Converter={StaticResource TimeSpanConverter}}"/>
					</TableSection>
				</TableView.Root>
			</TableView>
		</ScrollView>
	</StackLayout>
</ContentPage>