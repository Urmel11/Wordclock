<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wordclock.Mobile.View.ColorPickerView">
	<StackLayout>
		<BoxView VerticalOptions="FillAndExpand" Color="{Binding CurrentColor}"/>

		<Label Text="{Binding Red, StringFormat='Rot = {0:F2}'}"/>
		<Slider Minimum="0" Maximum="1" Value="{Binding Red, Mode=TwoWay}"/>

		<Label Text="{Binding Green, StringFormat='Grün = {0:F2}'}"/>
		<Slider Minimum="0" Maximum="1" Value="{Binding Green, Mode=TwoWay}"/>

		<Label Text="{Binding Blue, StringFormat='Blau = {0:F2}'}"/>
		<Slider Minimum="0" Maximum="1" Value="{Binding Blue, Mode=TwoWay}"/>

		<ListView ItemsSource="{Binding Colors}" ItemSelected="OnItemSelected">
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<ViewCell.View>
							<StackLayout Orientation="Horizontal" Spacing="15" Padding="5, 5, 0, 5">
								<BoxView Color="{Binding Color}"/>
								<Label Text="{Binding Name}" YAlign="Center"/>
							</StackLayout>
						</ViewCell.View>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>

		<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
			<Button Text="Übernehmen" HorizontalOptions="FillAndExpand" Command="{Binding Apply}"/>
			<Button Text="Abbrechen" HorizontalOptions="FillAndExpand" Command="{Binding Cancel}"/>
		</StackLayout>
		
	</StackLayout>
</ContentPage>