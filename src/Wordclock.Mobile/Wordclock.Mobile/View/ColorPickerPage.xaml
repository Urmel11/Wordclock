<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wordclock.Mobile.ColorPickerPage">
	<ContentPage.Content>
		<StackLayout VerticalOptions="FillAndExpand" Spacing="30">
			<Label Text="Farbe" Font="20" HorizontalOptions="Center"/>

			<ScrollView VerticalOptions="FillAndExpand">
				<ListView x:Name="colorList" ItemsSource="{Binding AvailableColors}" ItemTapped="OnItemTapped">
					<ListView.ItemTemplate>
						<DataTemplate>
							<ViewCell>
								<StackLayout Orientation="Horizontal">
									<BoxView Color="{Binding Color}"/>
									<Label Text="{Binding Name}"/>
								</StackLayout>
							</ViewCell>
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
			</ScrollView>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>