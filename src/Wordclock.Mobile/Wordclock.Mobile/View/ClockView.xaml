<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wordclock.Mobile.View.ClockView"
			 xmlns:local="clr-namespace:Wordclock.Mobile.Converter"
			 Title="Wordclock">

	<ContentPage.Resources>
		<ResourceDictionary>
			<local:ColorSurrogateToColorConverter x:Key="ColorConverter"/>
		</ResourceDictionary>
	</ContentPage.Resources>

	<StackLayout VerticalOptions="FillAndExpand">
		<ScrollView VerticalOptions="FillAndExpand">
			<TableView>
				<TableView.Root>
					<TableSection Title="Uhr">
						<SwitchCell Text="'Es ist' anzeigen" On="{Binding ShowPrefix}"/>

						<ViewCell Tapped="ColorCellTapped">
							<ViewCell.View>
								<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
									<Label Text="Farbe" YAlign="Center" Margin="16,0,0,0"/>
									<BoxView x:Name="clockColor" HorizontalOptions="EndAndExpand"/>
								</StackLayout>
							</ViewCell.View>
						</ViewCell>
					</TableSection>
				</TableView.Root>
			</TableView>
		</ScrollView>
	</StackLayout>
	
</ContentPage>